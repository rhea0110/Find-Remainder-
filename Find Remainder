// Write a program to find the remainder when an integer A is divided by an integer B.


import java.util.Scanner;

public class Main {
    public static void main(String[] args){
        Scanner in = new Scanner(System.in);
        int T = in.nextInt();
        while(T-- > 0){
            int a = in.nextInt();
            int b = in.nextInt();

            int ans = a % b;
            System.out.println(ans);
        }
    }
}
